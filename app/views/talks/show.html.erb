<% title = @talk.title(current_user, 50) %>
<% provide(:title, title) %>
<h1><%= title %></h1>

<div class="row" >
  <div class="col-md-8 col-md-offset-2">
    <ul class="dmessages">
      <%= render @dmessages %>
    </ul>
    
    <%= form_for @dmessage, url: dmessages_talk_path(@talk),
                          html: { class: 'dmessage-form'} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.text_area :content, class: "content" %>
      </div>
      <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>
  </div>
    <%= javascript_include_tag 'bubbly.js' %>
<script>bubbly({
  blur:200,
  colorStart: '#BAD3FF',
  colorStop: '#D9E5FF',
  radiusFunc:() => 5 + Math.random() * 75,
  angleFunc:() => -Math.PI / 2,
  velocityFunc:() => Math.random() * 2,
  bubbleFunc:() => `hsla(${200 + Math.random() * 50}, 100%, 65%, .1)`,
  bubbles:150
});</script>
</div>