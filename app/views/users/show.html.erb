<% provide(:title, @user.name) %>
<body class="main">
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1 class="color">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
     <section class="talk" >
      <%= form_for Talk.new do |f| %>
        <%= hidden_field_tag :member_id, @user.id %>
        <%= f.submit "Direct Message", class: "btn btn-primary" %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
          <h1 class="subtitle">Account</h1>
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3 class="color">Tweet (<%= @user.microposts.count %>)</h3>
      <ol class="microposts ulbackcolor">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
</body>
