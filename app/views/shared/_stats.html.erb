<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" id="linkcolor">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    Follows
  </a>
  <a href="<%= followers_user_path(@user) %>" id="linkcolor">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    Followers
  </a>
</div>