<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body class="main">
    <%= render "layouts/header" %>
    <div class="container">
      <% flash.each do |message_type, message| %>
         <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
        <%= yield %>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>